<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="match_parent"
    tools:layout_height="51dp"
    tools:gravity="center_vertical"
    tools:background="@drawable/rounded_shape_12"
    tools:backgroundTint="@color/light_gray"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/side_padding_16"
        android:layout_weight="1">

        <TextView
            android:id="@+id/label"
            style="@style/TypographyRegular12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/expected_salary"
            android:textColor="@color/gray"/>

        <EditText
            android:id="@+id/text"
            style="@style/TypographyRegular16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="9"
            android:hint="@string/salary_textfield_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <ImageView
        android:id="@+id/trailing_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/inside_padding_12"
        android:src="@drawable/ic_close"
        android:visibility="gone"
        app:tint="?attr/colorOnPrimary"
        tools:visibility="visible"/>

</merge>
