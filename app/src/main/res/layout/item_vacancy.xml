<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/inside_padding_16"
    android:paddingVertical="@dimen/inside_padding_8"
    android:orientation="horizontal"
    android:background="?android:colorBackground"
    android:foreground="?selectableItemBackground"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="@dimen/company_logo_size"
        android:layout_height="@dimen/company_logo_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/company_logo_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/side_padding_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TypographyMedium22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            tools:text="Vacancy Title Vacancy Title Vacancy Title Vacancy Title" />

        <TextView
            android:id="@+id/company_name"
            style="@style/TypographyRegular16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            tools:text="Company Name"  />

        <TextView
            android:id="@+id/salary"
            style="@style/TypographyRegular16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            tools:text="From 0 to 1000000 $"  />

    </LinearLayout>

</LinearLayout>
