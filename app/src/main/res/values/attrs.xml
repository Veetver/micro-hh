<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textColor" format="color" />
    <attr name="text" format="string|reference" />
    <attr name="statePlaceholderStyle" format="reference" />

    <declare-styleable name="SelectableViewHH">
        <attr name="labelTextColor" format="color" />
        <attr name="labelTextColorFilled" format="color" />
        <attr name="textColor" />
        <attr name="textColorFilled" format="color" />
        <attr name="hhSelectableViewStyle" format="reference" />
        <attr name="label" format="string|reference" />
        <attr name="text" />

        <attr name="data" format="enum">
            <enum name="empty" value="0" />
            <enum name="filled" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TextFieldHH">
        <attr name="placeholderTextColor" format="color" />
        <attr name="hintTextColor" format="color" />
        <attr name="hintTextColorFocused" format="color" />
        <attr name="hintTextColorFilled" format="color" />
        <attr name="textColor" />
        <attr name="iconColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="hhTextFieldStyle" format="reference" />
        <attr name="placeholderText" format="string|reference" />
        <attr name="hintText" format="string|reference" />
        <attr name="text" />

        <attr name="mode" format="enum">
            <enum name="textField" value="0" />
            <enum name="searchField" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="StatePlaceholder">
        <attr name="textColor" />

        <attr name="connection_error_text" format="string|reference" />
        <attr name="nothing_found_text" format="string|reference" />

        <attr name="default_image" format="reference" />
        <attr name="loading_image" format="reference" />
        <attr name="connection_error_image" format="reference" />
        <attr name="nothing_found_image" format="reference" />

        <attr name="state" format="enum">
            <enum name="default_state" value="0" />
            <enum name="loading_state" value="1" />
            <enum name="connection_error_state" value="2" />
            <enum name="nothing_found_state" value="3" />
        </attr>
    </declare-styleable>
</resources>
