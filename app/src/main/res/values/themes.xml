<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MicroHH" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="background">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="cursorColor">@color/blue</item>

        <item name="bottomNavigationStyle">@style/BottomNavHH</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
      
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/light_on_primary</item>
        <item name="toolbarStyle">@style/Base.Theme.MicroHH.Toolbar</item>
    </style>

    <style name="MyTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="cursorColor">@color/blue</item>
        <item name="cursorErrorColor">@color/blue</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
        <item name="lineHeight">19sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.MicroHH" parent="Base.Theme.MicroHH" />

    <style name="BackgroundStyle">
        <item name="background">@color/dark_on_primary</item>
    </style>
</resources>
