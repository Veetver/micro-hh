<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LayoutFullScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">?attr/android:colorBackground</item>
    </style>

    <style name="AlertText" parent="TypographyMedium22">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/side_padding_16</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ButtonStyle" parent="TypographyMedium16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="toolbarTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="teamScreenDevNamesTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="favoritesNotFoundTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="favoritesIssueTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="favoritesVacancyViewContainer">

    </style>

</resources>
